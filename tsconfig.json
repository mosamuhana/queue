{
	"compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": "./src",
		"rootDir": "src",
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
		"allowJs": true,
		"pretty": true,
		"strict": true
	},
	"compileOnSave": false,
	"exclude": ["node_modules"],
	"include": [ "src" ]
}
